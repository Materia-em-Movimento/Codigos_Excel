            DoEvents
'        Application.Wait Now + TimeValue("00:00:01")
'        SendKeys "{DOWN}"
        
        
        SendKeys "%{TAB}"
        Application.Wait Now + TimeValue("00:00:01")
        SendKeys "{DOWN}"
        SendKeys "{LEFT}"
        SendKeys "^+{RIGHT}"
'        Application.Wait Now + TimeValue("00:00:01")
        SendKeys "^c"
