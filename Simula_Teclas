---------------------------------------------------------------------------------

Private Sub Copia_e_cola_Tudo()

    'SimularTeclas

    ' Alternar para a próxima janela
    SendKeys "%{TAB}"
    Application.Wait Now + TimeValue("00:00:01")
    
    ' Selecionar tudo
    SendKeys "^a"
    Application.Wait Now + TimeValue("00:00:01")
    
    ' Copiar
    SendKeys "^c"
    Application.Wait Now + TimeValue("00:00:01")
    
    ' Alternar para a próxima janela
    SendKeys "%{TAB}"
    'Application.Wait Now + TimeValue("00:00:01")
    
    Range("A1").Select
    
    ' Colar
    SendKeys "^v"
    'Application.Wait Now + TimeValue("00:00:03")
    
    ' Pressionar Enter
    'SendKeys "{ENTER}"
    
End Sub
